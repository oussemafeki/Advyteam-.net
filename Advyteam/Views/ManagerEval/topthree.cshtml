
@{
    ViewBag.Title = "topthree";
}


<center>
    <div class="card bg-warning-dark border-0">
        <div class="row align-items-center mx-0">
            <div class="col-4 text-center"><em class="icon-trophy fa-3x"></em></div>
            <div class="col-8 py-4 bg-warning rounded-right">
                <div class="h1 m-0 text-bold">TOP 3</div>
                <div class="text-uppercase">Employees of the year</div>
            </div>
        </div>
    </div>
</center>

    @foreach (var p in ViewBag.result)
    {

        <div class="card">
            <div class="card-body">
                <div class="text-right text-muted"><em class="briefcase"></em></div>
                <h3 class="mt-0"> @p.nom  @p.prenom</h3>
                <p class="text-muted">@p.role %</p>
                <div class="progress progress-xs mb-3">
                    <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" aria-valuenow="@p.role" aria-valuemin="0" aria-valuemax="100" style="width: @p.role%"><span class="sr-only">@p.role% Complete</span></div>
                </div>
            </div>
        </div>
    }
    